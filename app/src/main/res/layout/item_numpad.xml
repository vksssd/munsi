<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/amount_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="start"
        android:text="0"
        android:minHeight="60sp"
        android:backgroundTint="@android:color/transparent"
        android:textStyle="bold"
        android:padding="10sp"
        android:textColor="@color/light_gray_darker"
        android:textSize="50sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/number_pad"/>

    <GridLayout
        android:id="@+id/number_pad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:columnCount="4"
        android:rowCount="5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/amount_display">

        <TextView
            android:id="@+id/clear_al"
            style="@style/NumberPadButton"
            android:foreground="@drawable/ripple_effect"
            android:clickable="true"
            android:backgroundTint="@android:color/black"
            android:text="X" />
        <TextView
            android:id="@+id/clear_all"
            style="@style/NumberPadButton"
            android:foreground="@drawable/ripple_effect"
            android:clickable="true"
            android:backgroundTint="@android:color/black"
            android:text="AC" />

        <ImageButton
            android:id="@+id/button_backspace"
            style="@style/NumberPadButton"
            android:backgroundTint="@android:color/holo_red_light"
            android:foreground="@drawable/ripple_effect"
            android:clickable="true"
            android:src="@drawable/ic_back" />


        <TextView
            android:id="@+id/division"
            style="@style/NumberPadButton"
            android:backgroundTint="@android:color/holo_green_light"
            android:foreground="@drawable/ripple_effect"
            android:clickable="true"
            android:text="/" />


        <TextView
            android:id="@+id/button_1"
            style="@style/NumberPadButton"
            android:foreground="@drawable/ripple_effect"
            android:clickable="true"
            android:text="1" />

        <TextView
            android:id="@+id/button_2"
            style="@style/NumberPadButton"
            android:foreground="@drawable/ripple_effect"
            android:clickable="true"
            android:text="2" />

        <TextView
            android:id="@+id/button_3"
            style="@style/NumberPadButton"
            android:foreground="@drawable/ripple_effect"
            android:clickable="true"
            android:text="3" />

        <TextView
            android:id="@+id/multiply"
            style="@style/NumberPadButton"
            android:backgroundTint="@android:color/holo_green_light"
            android:foreground="@drawable/ripple_effect"
            android:clickable="true"
            android:text="x" />

        <TextView
            android:id="@+id/button_4"
            style="@style/NumberPadButton"
            android:foreground="@drawable/ripple_effect"
            android:clickable="true"
            android:text="4" />

        <TextView
            android:id="@+id/button_5"
            style="@style/NumberPadButton"
            android:foreground="@drawable/ripple_effect"
            android:clickable="true"
            android:text="5" />

        <TextView
            android:id="@+id/button_6"
            style="@style/NumberPadButton"
            android:foreground="@drawable/ripple_effect"
            android:clickable="true"
            android:text="6" />

        <TextView
            android:id="@+id/subtraction"
            style="@style/NumberPadButton"
            android:backgroundTint="@android:color/holo_green_light"
            android:foreground="@drawable/ripple_effect"
            android:clickable="true"
            android:text="-" />

        <TextView
            android:id="@+id/button_7"
            style="@style/NumberPadButton"
            android:foreground="@drawable/ripple_effect"
            android:clickable="true"
            android:text="7" />

        <TextView
            android:id="@+id/button_8"
            style="@style/NumberPadButton"
            android:foreground="@drawable/ripple_effect"
            android:clickable="true"
            android:text="8" />

        <TextView
            android:id="@+id/button_9"
            style="@style/NumberPadButton"
            android:foreground="@drawable/ripple_effect"
            android:clickable="true"
            android:text="9" />

        <TextView
            android:id="@+id/addition"
            style="@style/NumberPadButton"
            android:backgroundTint="@android:color/holo_green_light"
            android:foreground="@drawable/ripple_effect"
            android:clickable="true"
            android:text="+" />


        <TextView
            android:id="@+id/button_decimal"
            style="@style/NumberPadButton"
            android:foreground="@drawable/ripple_effect"
            android:clickable="true"
            android:text="." />

        <TextView
            android:id="@+id/button_0"
            style="@style/NumberPadButton"
            android:foreground="@drawable/ripple_effect"
            android:clickable="true"
            android:text="0" />

        <TextView
            android:id="@+id/button_00"
            style="@style/NumberPadButton"
            android:foreground="@drawable/ripple_effect"
            android:clickable="true"
            android:text="00" />

        <TextView
            android:id="@+id/calculate"
            style="@style/NumberPadButton"
            android:foreground="@drawable/ripple_effect"
            android:backgroundTint="@android:color/holo_green_dark"
            android:clickable="true"
            android:text="=" />


    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
