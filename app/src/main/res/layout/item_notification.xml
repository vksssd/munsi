<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="#9BEDF6"
    android:background="@drawable/rounded_corner"
    android:clickable="true"
    android:elevation="8dp"
    android:foreground="@drawable/ripple_effect"
    android:layout_margin="3dp">

    <ImageView
        android:id="@+id/notification_item_icon_iv"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:src="@drawable/ic_bell"
        android:layout_margin="10sp"
        android:background="@drawable/rounded_corner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/notification_message_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add a DividerItemDecoration to the RecyclerView to separate the list items.Add content description to the views.Use themes and styles to manage the appearance of your views."
        android:layout_margin="10sp"
        android:textSize="16sp"
        android:maxEms="16"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/notification_item_icon_iv"/>

    <TextView
        android:id="@+id/notification_tag_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Refer &amp; Earn"
        android:layout_marginVertical="5sp"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/notification_message_tv"
        app:layout_constraintTop_toBottomOf="@id/notification_message_tv"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/more_notification_item_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/stat_notify_more"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/notification_message_tv"
        app:layout_constraintStart_toEndOf="@id/notification_message_tv"/>
</androidx.constraintlayout.widget.ConstraintLayout>