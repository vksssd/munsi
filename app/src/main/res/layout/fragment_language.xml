<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.settings.LanguageFragment">

    <include
        android:id="@+id/language_titlebar"
        layout="@layout/item_titlebar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ScrollView
        android:id="@+id/language_card_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="3dp"
        android:paddingVertical="5dp"
        android:layout_margin="5dp"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/language_titlebar">
    <LinearLayout
     android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/language1"
            layout="@layout/item_text_radio" />

        <include
            android:id="@+id/language2"
            layout="@layout/item_text_radio" />

        <include
            android:id="@+id/language3"
            layout="@layout/item_text_radio" />

        <include
            android:id="@+id/language4"
            layout="@layout/item_text_radio" />

        <include
            android:id="@+id/language5"
            layout="@layout/item_text_radio" />

        <include
            android:id="@+id/language6"
            layout="@layout/item_text_radio" />

        <include
            android:id="@+id/language7"
            layout="@layout/item_text_radio" />

        <include
            android:id="@+id/language8"
            layout="@layout/item_text_radio" />

        <include
            android:id="@+id/language9"
            layout="@layout/item_text_radio" />


    </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
