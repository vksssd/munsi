<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/teal_700"
    android:paddingHorizontal="8dp"
    android:foreground="@drawable/ripple_effect"
    android:clickable="true"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/item_icon_iv"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/ic_speaker"
            android:background="@drawable/rounded_corner"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/item_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Setting 1"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="@id/item_icon_iv"
            app:layout_constraintStart_toEndOf="@id/item_icon_iv"
            android:layout_marginHorizontal="8sp"/>

        <TextView
            android:id="@+id/item_subtext_id_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="small info"
            android:textColor="@color/white"
            android:textStyle="normal"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/item_title_tv"
            app:layout_constraintStart_toStartOf="@id/item_title_tv"
            />

        <ImageView
            android:id="@+id/item_open_icon_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:src="@drawable/ic_arrow_right"
            android:background="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8sp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_ractangle"
            app:layout_constraintTop_toBottomOf="@id/item_open_icon_iv"
            android:gravity="bottom"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="@id/item_title_tv"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="5dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
